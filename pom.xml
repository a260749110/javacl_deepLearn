		<module>Core</module>
		<module>Blas</module>
		<module>OpenGLDemos</module>
		<module>Tutorials</module>
	</modules>
	
    <profiles>
      <profile>
        <id>regenerate</id>
        <activation>
            <activeByDefault>false</activeByDefault>
        </activation>
      </profile>
    </profiles>
	<dependencyManagement>
		<dependencies>
